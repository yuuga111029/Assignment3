<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle"%> <!--minlength: 2, maxlength: 20, -->

  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :opinion, autofocus: true, id: "inputOpinion" %> <!--maxlength: 50, -->

  <%= f.submit "Update Book" %>

<% end %>

