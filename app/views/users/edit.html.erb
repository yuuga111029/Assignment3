<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%> <!--minlength: 2, maxlength: 20, -->
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id: "inputIntroduction" %> <!--maxlength: 50, -->

  <%= f.submit "Update User" %>

<% end %>