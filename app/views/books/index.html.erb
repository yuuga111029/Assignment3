<main>
  <p id="notice"></p>

  <div class="container px-5 px-sm-0">
    <div class="row">


      <div class="col-md-3">

        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>

        <table class="table">

          <div class="col-lg-6">
            <p>Name <%= current_user.name %></p>
          </div>

          <div class="col-lg-6">
            <p>Introduction <%= current_user.introduction %></p>
          </div>

        </table>

        <div class="row">

          <!--< @users.each do |user| %>-->

            <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user) %>">
              <i class="fas fa-user-cog" aria-hidden="true"></i>
            </a>

          <!--< end %>-->


        </div>

        <h2 class="mt-3">New book</h2>

        <% if @book.errors.any? %>
          <ul class="alert alert-danger" role="alert">

            <h6 class="alert-heading">
              <%= @book.errors.count %> errors prohibited this obj from being saved:
            </h6>

            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>

          </ul>
        <% end %>

        <%= form_with model: @book do |f| %>

          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"form-control", placeholder:"Title" %>
          </div>

          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"Opinion" %>
          </div>

          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-md btn-block btn-info mt-4" %>
          </div>

        <% end %>
        </div>


        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>

          <table class="table table-hover table-inverse">

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>

              <% @books.each do |book| %>

              <tr>

              <td class="col-lg-2">
              <%= image_tag book.user.get_profile_image(100,100) %>
              </td>


              <td class="col-lg-2">
                <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
                <% end %>
              </td>

              <td class="col-lg-8">  <!-- この行を追加 -->
                <p><%= book.body %></p>
              </td>

              </tr>

              <% end %>

            </tbody>


          </table>

        </div>



